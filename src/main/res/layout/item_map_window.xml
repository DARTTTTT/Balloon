<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        >
       <ImageView
           android:id="@+id/window_iv"
           android:layout_height="50dp"
           android:layout_width="50dp"
           android:src="@mipmap/icon_plan_scenery"
           />
        <TextView
            android:id="@+id/window_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="合影"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/window_iv"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/window_destion"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="丽江"
            android:layout_toRightOf="@+id/window_iv"
            android:layout_below="@+id/window_title"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWord"
            android:layout_alignBaseline="@+id/window_iv"
            />
        <TextView
            android:id="@+id/window_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议怎么玩"
            android:textColor="@color/colorWord"
            android:layout_alignBaseline="@+id/window_iv"
            android:layout_below="@+id/window_title"
            android:layout_toRightOf="@+id/window_destion"
            />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>


    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="#dbdbdb"
        />



    <LinearLayout
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="地图导航"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="查看攻略"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            />

        </LinearLayout>
</LinearLayout>