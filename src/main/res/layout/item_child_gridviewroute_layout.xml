<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llall_listener"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <!--头部的-->
        <RelativeLayout
            android:id="@+id/route_rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/stay_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_plan_scenery" />

            <TextView
                android:id="@+id/gd_route_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/stay_iv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/stay_iv"
                android:text="大水车"

                />

            <TextView
                android:id="@+id/gd_route_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gd_route_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/stay_iv"
                android:text="建议玩几天" />
        </RelativeLayout>

        <!--下面图片和文字内容的-->

        <LinearLayout
            android:id="@+id/route_ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/gd_route_cover"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@mipmap/icon_wish_empty"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/gd_route_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址介绍"
                android:textSize="16sp"
                android:padding="10dp"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape"
                android:text="查看攻略与游记"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>